<%= form_with model: article do |form| %>
  <div class="field">
    <%= form.label :title, class: "label" %><br>
    <%= form.text_field :title, class: "input" %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div class="help is-danger"><%= message %></div>
    <% end %>
  </div>
  <div class="field">
    <%= form.label :body, class: "label" %><br>
    <%= form.text_area :body, class: "textarea" %>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div class="help is-danger"><%= message %></div>
    <% end %>
  </div>
  <div class="field is-grouped">
    <div class="control">
      <%= form.submit locals[:submit_label], disable_with: 'Submiting...', class: locals[:style] %>
    </div>
    <div class="control">
      <%= link_to locals[:cancel_label], locals[:path], class: "button is-light" %>
    </div>
  </div>
<% end %>
